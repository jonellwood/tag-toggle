{
	"name": "tag-toggle",
	"displayName": "tag-toggle",
	"description": "Quickly comment/uncomment HTML tags and their matching closing tags. Place cursor on any opening tag and use Ctrl+Shift+C to comment out the entire tag pair, even with hundreds of lines in between.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
			"command": "tagToggle.toggleCommentTag", 
  			"title": "Toggle Comment Tag"
		}],
		"keybindings": [{
			"command": "tagToggle.toggleCommentTag",
			"key": "ctrl+shift+c",
			"mac": "cmd+shift+c",
			"when": "editorTextFocus && editorLangId == html"
		}]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "16.x",
		"eslint": "^8.28.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.9.4",
		"@vscode/test-electron": "^2.2.0"
	}
}
