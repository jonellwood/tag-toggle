{
	"name": "tag-toggle",
	"displayName": "tag-toggle",
	"description": "Quickly comment/uncomment HTML tags and their matching closing tags. Place cursor on any opening tag and use Ctrl+Shift+/ to comment out the entire tag pair, even with hundreds of lines in between.",
	"version": "0.1.0",
	"publisher": "jonellwood",
	"icon": "images/tag-toggle.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jonellwood/tag-toggle.git"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:html",
        "onLanguage:php",
        "onLanguage:vue"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tagToggle.toggleCommentTag",
				"title": "Toggle HTML Tag Comment"
			},
			{
				"command": "tagToggle.setKeybinding",
				"title": "Set Tag Toggle Keybinding"
			  },
			  {
				"command": "tagToggle.checkKeybindingConflict",
				"title": "Check Keybinding Conflicts"
			  }
		],
		"keybindings": [
			{
				"command": "tagToggle.toggleCommentTag",
				"key": "ctrl+shift+/",
				"mac": "cmd+shift+/",
				"when": "editorTextFocus && (editorLangId == html || editorLangId == php || editorLangId == vue)"
			}
		],
		"configuration": {
        "title": "Tag Toggle",
        "properties": {
          "tagToggle.keybinding": {
            "type": "string",
            "default": "cmd+shift+/",
            "description": "Custom keybinding for toggling HTML tag comments (e.g., 'cmd+shift+/', 'ctrl+alt+t')",
            "scope": "window"
          },
          "tagToggle.checkConflictsOnStartup": {
            "type": "boolean",
            "default": true,
            "description": "Check for keybinding conflicts when the extension starts",
            "scope": "window"
          }
        }
      }
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "16.x",
		"eslint": "^8.28.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.9.4",
		"@vscode/test-electron": "^2.2.0"
	}
}
